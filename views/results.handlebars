
<section class="recipe">
  <img src="/images/{{painting.filename}}" alt="{{painting.description}}">
  <div class="recipe-details">
    <h3>{{recipe.title}}</h3>
    <p>By: {{recipe.artist}}</p>
    <p>Exhibition open until: {{ format_date painting.exhibition_date}}</p>
  </div>
</section>

{{!-- If the user is logged in we want to render last search results by a logged in user --}}

<div>
    <a href="/">Home</a>
    <!-- If the user is logged in, allow them to save a recipe -->
    {{#if loggedIn}}
    <button id="save-recipe" class="btn-no-style">Save</button>
    {{else}}
    
    <!-- Otherwise, show a link to login -->
    <a href="/login">Login</a>
    {{/if}}
  </div>

